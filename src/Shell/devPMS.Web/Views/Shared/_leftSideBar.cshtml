@using devPMS.Web.CustomMembership

@{
    var identity = (HttpContext.Current.User as CusPrincipal).Identity as CusIdentity;
}
<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/images/@identity.User.Image" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@identity.User.FullName</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <!-- search form -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- sidebar menu: : style can be found in sidebar.less -->
        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li>
                <a href="@Url.Action("DashboardVector","Home")">
                    <i class="fa fa-dashboard"></i> <span>Dashboard</span>
                    <span class="pull-right-container">
                        <small class="label pull-right bg-green">Coming soon</small>
                    </span>
                </a>
            </li>
            <li class="treeview">
                <a href="#">
                    <i class="fa fa-shirtsinbulk"></i>
                    <span>Active Projects</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                <ul class="treeview-menu">
                    <li>
                        <a href="@Url.Action("Table", "Project", new { filter = "INTAKE" })">
                            <i class="fa fa-circle-o text-red"></i> InTake
                            @*<span class="label label-primary pull-right">20</span>*@
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Table", "Project", new { filter = "Unassigned" })">
                            <i class="fa fa-circle-o text-red"></i> Unassigned
                            @*<span class="label label-primary pull-right">20</span>*@
                        </a>
                    </li>
                    <li><a href="@Url.Action("Table", "Project", new { filter = "ATS" })"><i class="fa fa-circle-o text-yellow"></i> ATS</a></li>
                    <li><a href="@Url.Action("Table", "Project", new { filter = "MomentFrame" })"><i class="fa fa-circle-o text-aqua"></i> Moment Frame</a></li>
                    <li><a href="@Url.Action("Table", "Project", new { filter = "TakeOff" })"><i class="fa fa-circle-o text-purple"></i> Take-Off</a></li>
                    <li class="clear"></li>
                    <li class="header">My Filters</li>
                    <li><a href="@Url.Action("ComingSoon", "Project")"><i class="fa fa-circle-o text-red"></i> <span>To Do</span></a></li>
                    <li><a href="@Url.Action("ComingSoon", "Project")"><i class="fa fa-circle-o text-yellow"></i> <span>In Progress</span></a></li>
                    <li><a href="@Url.Action("ComingSoon", "Project")"><i class="fa fa-circle-o text-aqua"></i> <span>Ready for Review</span></a></li>
                    <li><a href="@Url.Action("ComingSoon", "Project")"><i class="fa fa-circle-o text-aqua"></i> <span>In Review</span></a></li>
                    <li><a href="@Url.Action("ComingSoon", "Project")"><i class="fa fa-circle-o text-aqua"></i> <span>Completed</span></a></li>
                </ul>
            </li>
            <li class="header">Shortcuts</li>
            <li><a href="@Url.Action("Table", "Project", new { filter = "MyActiveProjects" })"><i class="fa fa-circle-o text-red"></i> <span>My Active Projects</span></a></li>
            <li><a href="@Url.Action("Table", "Project", new { filter = "TeamActiveProjects" })"><i class="fa fa-circle-o text-yellow"></i> <span>Team Active Projects</span></a></li>
            @*<li><a href="#"><i class="fa fa-circle-o text-aqua"></i> <span>All Projects</span></a></li>*@
            <li><a href="@Url.Action("ProjectService", "Project")"><i class="fa fa-circle-o text-aqua"></i> <span>Create Request Service</span></a></li>
        </ul>
    </section>
    <!-- /.sidebar -->
</aside>