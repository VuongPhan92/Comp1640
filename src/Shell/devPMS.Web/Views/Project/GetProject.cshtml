<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function() {
        TableManageButtons = function () {
            "use strict";
            return {
                init: function () {
                    ProjectTableControl();
                }
            };
        }();
        TableManageButtons.init();
        $('#scopeSelector').select2({         
            placeholder: 'Filter by Scope'
           
        });
        $('#statusSelector').select2({
            placeholder: 'Filter by Status'
        });
        $('#assigneeSelector').select2({
            placeholder: 'Filter by Assignee'
        });
       
        //$('#rangeSelector .input-daterange').daterangepicker({
        //    keyboardNavigation: false,
        //    forceParse: false,
        //    autoclose: true
        //});        $('#startdaterange-btn').daterangepicker(
        {
            ranges: {
                'Today': [moment(), moment()],
                'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                'This Month': [moment().startOf('month'), moment().endOf('month')],
                'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
            },
            startDate: moment().subtract(29, 'days'),
            endDate: moment()
        },
        function (start, end) {
            $('#startdaterange-btn span').html(start.format('MM/DD/ YYYY') + ' - ' + end.format('MM/DD/YYYY'));
        });       
        $('#duedaterange-btn').daterangepicker(
       {
           ranges: {
               'Today': [moment(), moment()],
               'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
               'Last 7 Days': [moment().subtract(6, 'days'), moment()],
               'Last 30 Days': [moment().subtract(29, 'days'), moment()],
               'This Month': [moment().startOf('month'), moment().endOf('month')],
               'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
           },
           startDate: moment().subtract(29, 'days'),
           endDate: moment()
       },
       function (start, end) {
           $('#duedaterange-btn span').html(start.format('MM/DD/ YYYY') + ' - ' + end.format('MM/DD/YYYY'));
       });
    });
</script>
